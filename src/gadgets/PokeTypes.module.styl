.pokeTypeTable
  border-spacing 0

.type
  font-size 10px
  // temporarily disable `font-variant-property` PostCSS feature in order to
  // avoid confliction between `text-transform capitalize` and
  // `font-feature-settings c2sc`
  text-transform capitalize
  font-variant small-caps

.slashedHeader
  position relative
  font-size 8px
  font-weight normal

  svg
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &::before
    position absolute
    left 0
    bottom 0
    content "ATK"

  &::after
    position absolute
    top 0
    right 0
    content "DEF"

.atkType
  @extend .type
  text-align right
  font-weight bold
  min-width 4em

.defType
  @extend .type
  text-align center
  min-width 4em

.effect
  text-align center

.highlighted
  background-color #eee
